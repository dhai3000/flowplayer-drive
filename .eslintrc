{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "import/no-unresolved": 2,
        "import/named": 2,
        "import/namespace": 2
    },
    "env": {
        "es6": true,
        "node": true,
    },
    "extends": "eslint:recommended",
    "plugins": [
        "import"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolver": "webpack"
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    }
}
